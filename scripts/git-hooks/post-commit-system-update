#!/bin/bash
# Git post-commit hook for SYSTEM.md auto-update
# This hook runs after each commit to update SYSTEM.md based on codebase changes

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}Running SYSTEM.md auto-update...${NC}"

# Get the repository root
REPO_ROOT=$(git rev-parse --show-toplevel)
cd "$REPO_ROOT"

# Check if any significant files were modified in the last commit
SIGNIFICANT_CHANGES=false

# Check for changes to directory structure, scripts, or documentation
if git diff --name-only HEAD~1 HEAD | grep -E "(scripts/|docs/|ai/|knowledge/|systems/|tools/|infrastructure/|commands/)" > /dev/null; then
    SIGNIFICANT_CHANGES=true
    echo -e "${YELLOW}üìù Significant structural changes detected${NC}"
fi

# Check for new directories or files
if git diff --name-only --diff-filter=A HEAD~1 HEAD | grep -E "\.(md|py|sh|json|yaml|yml)$" > /dev/null; then
    SIGNIFICANT_CHANGES=true
    echo -e "${YELLOW}üìù New files detected${NC}"
fi

# Check for deleted files
if git diff --name-only --diff-filter=D HEAD~1 HEAD | grep -E "\.(md|py|sh|json|yaml|yml)$" > /dev/null; then
    SIGNIFICANT_CHANGES=true
    echo -e "${YELLOW}üìù Files deleted${NC}"
fi

if [ "$SIGNIFICANT_CHANGES" = true ]; then
    echo -e "${BLUE}Updating SYSTEM.md based on codebase changes...${NC}"
    
    # Run the system updater
    if [ -f "scripts/system-md-updater.py" ]; then
        source venv/bin/activate 2>/dev/null || true
        python3 scripts/system-md-updater.py --update
        echo -e "${GREEN}‚úÖ SYSTEM.md updated successfully${NC}"
    else
        echo -e "${RED}‚ùå System updater script not found${NC}"
    fi
else
    echo -e "${GREEN}‚úÖ No significant structural changes detected${NC}"
fi
